<?xml version="1.0" encoding="utf-8"?>
<dialog type="xuiMainMenuDlg" name="Demo Main Dialog">
  <attribute color="0x66ffff00" textcolor="0xffffffff" font="normal"	region="RECT[350,300,300,100]" style="caption,border" HasSepKbFocus="false">
    <border color="0xff0000ff" bevel="2:2:0:0" size="2"/>
    <!--hide状态为窗口不显示时候的状态-->
    <state name="hide" region="rect[-0,36,0,0]" color="0x00ffff00"/>
  </attribute>
  
  <!--热区能自动让鼠标动作在某个区域能和窗口的某个行为相关-->
  <hotarea name="autoshow" action="show" active="hide" region="rect[0,0,20,1000]" event="move" />
  <hotarea name="autohide" action="hide" active="show" region="rect[0,0,2000,1000]" event="right" />

  <caption type="caption" public="BaseCaption" text="三维地质信息系统" />
  <control type="xuiButton" name="Close"  public="BaseButton" tab ="0" text="继续"   region="RECT[20 ,45,100,40]"/>
  <control type="xuiButton" name="Quit"   public="BaseButton" tab ="2" text="退出"   region="RECT[180,45,100,40]" >

  </control>

</dialog>